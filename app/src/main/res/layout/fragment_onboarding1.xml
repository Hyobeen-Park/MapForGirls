<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="480dp"
            android:src="@drawable/onboarding1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="소녀돌봄 약국 위치 제공"
            android:textSize="64px"
            android:fontFamily="@font/nixgon_bold"
            android:textColor="#484848"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="현재 위치에서 근접한 약국을 지도에서\n빠르게 찾고 정보를 얻어요."
            android:textSize="45px"
            android:textColor="#484848"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/count_one"/>

        <Button
            android:id="@+id/onboarding1_start"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="시작하기"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:background="@drawable/round_green"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>