<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/info_test_tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:background="#F9E1FD"
        android:text="TEST"
        android:textAlignment="center"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/info_area_glayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:columnCount="2"
        app:layout_constraintTop_toBottomOf="@id/info_test_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/info_area1_btn"
            android:text="분야1"/>
        <Button
            android:id="@+id/info_area2_btn"
            android:text="분야2"/>
        <Button
            android:id="@+id/info_area3_btn"
            android:text="분야3"/>
        <Button
            android:id="@+id/info_area4_btn"
            android:text="분야4"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>