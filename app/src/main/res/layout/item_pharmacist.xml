<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_pharmacist_civ"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="6dp"
        app:civ_border_overlay="false"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/white"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_pharmacist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약국 이름"
        app:layout_constraintTop_toBottomOf="@id/item_pharmacist_civ"
        app:layout_constraintStart_toStartOf="@id/item_pharmacist_civ"
        app:layout_constraintEnd_toEndOf="@id/item_pharmacist_civ"/>


</androidx.constraintlayout.widget.ConstraintLayout>