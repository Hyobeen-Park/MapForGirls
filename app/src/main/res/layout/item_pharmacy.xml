<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_pharmacy_main_cv"
        android:layout_width="700px"
        android:layout_height="350px"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/item_pharmacy_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:text="약국명약국명"
                android:textSize="35px"
                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.144"
                app:layout_constraintStart_toEndOf="@+id/item_pharmacy_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_pharmacy_location_tv"
                android:layout_width="50dp"
                android:layout_height="11dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="서울시 중랑구"
                android:textColor="@color/green1"
                android:textSize="20px"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="14dp"
                android:layout_height="11dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/item_pharmacy_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_map_select" />

            <ImageView
                android:id="@+id/item_pharmacy_iv"
                android:layout_width="250px"
                android:layout_height="wrap_content"
                android:layout_marginEnd="172dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/example" />

            <TextView
                android:id="@+id/item_pharmacy_callnum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="010-0000-0000"
                android:textColor="#ADADAD"
                android:textSize="20px"
                android:textStyle="bold"

                android:layout_marginLeft="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/item_pharmacy_callnum_iv"
                app:layout_constraintTop_toBottomOf="@+id/item_pharmacy_name_tv" />

            <ImageView
                android:id="@+id/item_pharmacy_callnum_iv"
                android:layout_width="14dp"
                android:layout_height="11dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/item_pharmacy_iv"
                app:layout_constraintTop_toBottomOf="@+id/item_pharmacy_name_tv"
                app:srcCompat="@drawable/icon_call_grey" />

            <TextView
                android:id="@+id/item_pharmacy_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="월-금) 10:00 ~ 19:00 \n점심시간) 12:00~13:00"
                android:textColor="#ADADAD"
                android:textSize="20px"
                android:textStyle="bold"

                android:layout_marginLeft="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/item_pharmacy_time_iv"
                app:layout_constraintTop_toBottomOf="@+id/item_pharmacy_callnum_tv" />

            <ImageView
                android:id="@+id/item_pharmacy_time_iv"
                android:layout_width="14dp"
                android:layout_height="11dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/item_pharmacy_iv"
                app:layout_constraintTop_toBottomOf="@+id/item_pharmacy_callnum_tv"
                app:srcCompat="@drawable/icon_time_grey" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>